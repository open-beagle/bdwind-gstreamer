{
  "client_config": {
    "name": "WebRTC Signaling Client",
    "version": "1.0.0",
    "description": "Configuration for WebRTC signaling client with request-offer and ping support"
  },
  
  "connection": {
    "server_url": "ws://localhost:8080/ws",
    "app_name": "default",
    "peer_id": null,
    "auto_generate_peer_id": true,
    
    "timeout": {
      "connection": 10000,
      "message": 5000,
      "heartbeat": 30000
    },
    
    "retry": {
      "enabled": true,
      "max_attempts": 5,
      "base_delay": 1000,
      "max_delay": 30000,
      "exponential_backoff": true,
      "jitter": true
    },
    
    "keep_alive": {
      "enabled": true,
      "interval": 30000,
      "timeout": 5000,
      "max_missed": 3
    }
  },
  
  "protocol": {
    "version": "gstreamer-1.0",
    "supported_versions": ["gstreamer-1.0", "selkies"],
    "auto_detect": true,
    "fallback_version": "selkies",
    
    "message_format": {
      "encoding": "utf-8",
      "compression": false,
      "max_size": 65536
    }
  },
  
  "webrtc": {
    "peer_connection": {
      "ice_servers": [
        {
          "urls": ["stun:stun.l.google.com:19302"]
        },
        {
          "urls": ["stun:stun1.l.google.com:19302"]
        }
      ],
      
      "ice_transport_policy": "all",
      "bundle_policy": "max-bundle",
      "rtcp_mux_policy": "require",
      
      "ice_candidate_pool_size": 10,
      "ice_connection_timeout": 30000,
      "ice_gathering_timeout": 10000
    },
    
    "media_constraints": {
      "video": {
        "enabled": true,
        "width": 1920,
        "height": 1080,
        "frame_rate": 30,
        "bitrate": 2000000
      },
      
      "audio": {
        "enabled": true,
        "sample_rate": 48000,
        "channels": 2,
        "bitrate": 128000
      },
      
      "data_channel": {
        "enabled": true,
        "ordered": true,
        "max_retransmits": 3
      }
    },
    
    "codec_preferences": {
      "video": ["H264", "VP8", "VP9"],
      "audio": ["OPUS", "PCMU", "PCMA"]
    }
  },
  
  "messaging": {
    "request_offer": {
      "enabled": true,
      "auto_request": true,
      "request_delay": 1000,
      "timeout": 10000,
      "retry_on_failure": true,
      "max_retries": 3
    },
    
    "ping_pong": {
      "enabled": true,
      "interval": 30000,
      "timeout": 5000,
      "include_timestamp": true,
      "include_client_state": true,
      "track_latency": true
    },
    
    "input_events": {
      "enabled": true,
      "mouse": {
        "enabled": true,
        "capture_move": true,
        "capture_click": true,
        "capture_wheel": true,
        "throttle_move": 16
      },
      
      "keyboard": {
        "enabled": true,
        "capture_all_keys": true,
        "prevent_default": true,
        "handle_modifiers": true
      }
    },
    
    "statistics": {
      "enabled": true,
      "request_interval": 10000,
      "types": ["webrtc", "system", "network"],
      "store_history": true,
      "max_history_size": 100
    }
  },
  
  "ui": {
    "video_element": {
      "id": "remoteVideo",
      "auto_play": true,
      "muted": false,
      "controls": false,
      "poster": null
    },
    
    "status_display": {
      "enabled": true,
      "element_id": "connectionStatus",
      "show_latency": true,
      "show_bitrate": true,
      "show_resolution": true
    },
    
    "controls": {
      "enabled": true,
      "fullscreen_button": true,
      "quality_selector": true,
      "volume_control": true,
      "settings_menu": true
    }
  },
  
  "logging": {
    "level": "info",
    "console": true,
    "remote": false,
    
    "categories": {
      "connection": "info",
      "messaging": "debug",
      "webrtc": "info",
      "ui": "warn",
      "performance": "info"
    },
    
    "format": {
      "timestamp": true,
      "level": true,
      "category": true,
      "message": true
    }
  },
  
  "performance": {
    "monitoring": {
      "enabled": true,
      "metrics": {
        "connection_time": true,
        "message_latency": true,
        "frame_rate": true,
        "bitrate": true,
        "packet_loss": true,
        "jitter": true
      },
      
      "collection_interval": 1000,
      "history_size": 300
    },
    
    "optimization": {
      "adaptive_bitrate": true,
      "frame_dropping": true,
      "buffer_management": true,
      "connection_recovery": true
    }
  },
  
  "security": {
    "authentication": {
      "enabled": false,
      "type": "jwt",
      "token": null,
      "refresh_token": null,
      "auto_refresh": true
    },
    
    "encryption": {
      "dtls": true,
      "srtp": true
    },
    
    "validation": {
      "message_validation": true,
      "origin_check": true,
      "certificate_check": true
    }
  },
  
  "storage": {
    "local_storage": {
      "enabled": true,
      "prefix": "webrtc_client_",
      "store_settings": true,
      "store_statistics": false
    },
    
    "session_storage": {
      "enabled": true,
      "store_connection_state": true,
      "store_peer_id": true
    }
  },
  
  "events": {
    "handlers": {
      "connection_established": null,
      "connection_lost": null,
      "offer_received": null,
      "answer_sent": null,
      "ice_candidate_received": null,
      "media_stream_received": null,
      "data_channel_opened": null,
      "statistics_received": null,
      "error_occurred": null
    },
    
    "custom_events": {
      "enabled": true,
      "dispatch_to_window": true,
      "event_prefix": "webrtc_"
    }
  },
  
  "development": {
    "debug_mode": false,
    "verbose_logging": false,
    "mock_server": false,
    "test_patterns": false,
    
    "dev_tools": {
      "stats_overlay": false,
      "connection_info": false,
      "message_inspector": false,
      "performance_monitor": false
    }
  },
  
  "experimental": {
    "features": {
      "simulcast": false,
      "svc": false,
      "insertable_streams": false,
      "encoded_transform": false
    },
    
    "flags": {
      "use_unified_plan": true,
      "use_plan_b": false,
      "disable_encryption": false
    }
  }
}